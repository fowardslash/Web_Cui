<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="~/Content/Style/style.css" rel="stylesheet" />
</head>
<body>
    <div id="head">
        <!-- Header -->
        <div class="searchdialog" id="se">
            <div class="searchbar">
                <input id="s-txt-visible" class="visible"
                       placeholder="Bắt đầu gõ để tìm kiếm. VD: Lập trình python.">
            </div>
            <button class="closebtn material-symbols-outlined" onclick="makeinvis()">close</button>
            <div></div>
        </div>
        <div class="header" id="header">
            <div class="header-logo">
                <div id="logo" class="header-item"><img width="100" src="~/Content/img/favicon.png" alt=""></div>
            </div>
            <div class="header-item" id="entry"><a href="/">Trang Chủ</a></div>
            <div id="entry" class="header-item"><a href="/Forum/Forum">Diễn Đàn</a></div>
            <div id="entry" class="header-item"><a href="/Courses/FrontEnd">Khóa Học</a></div>
            <div id="entry" class="header-item"><a href="./service.html">Dịch Vụ</a></div>
            <div id="login-area" class="header-item">
                <div id="search" class="header-item" onclick="makevisible()">
                    <div class="search_icon">
                        <span class="material-symbols-outlined" id="icon">search</span>
                    </div>
                </div>
                <div id="login" class="header-item lo" onclick="loginclick()">Đăng nhập</div>
                <div id="register" class="header-item lo" onclick="window.location.href = '/Register/Main'">Đăng ký</div>
            </div>
        </div>
    </div>
    <div class="register-main" id="register1">
        <div class="register-wrap">
            <div class="wrap-left">
                <div class="left_img-wrap">
                    <img src="./Content/img/RegisterBG.png">
                </div>
            </div>
            <div class="wrap-right">
                <div class="btn_close-wrapper">
                    <i class="material-symbols-outlined btn_close" onclick="registerquit()">Close</i>
                </div>
                <div class="wrap-right_header">
                    <h5>ĐĂNG KÝ</h5>
                </div>
                <div class="register-forms">
                    <div class="email_form">
                        <div class="email_form-head">
                            <h4 class="register-forms_input">
                                <i style="padding-right: 2px;"
                                   class="ti-email"></i> Email:
                            </h4>
                        </div>
                        <input placeholder="you@example.com" type="text" class="form_text email">
                    </div>
                    <div class="username_form">
                        <div class="username_form-head">
                            <h4 class="register-forms_input">
                                <i style="padding-right: 2px;" class="ti-user"></i>
                                User Name:
                            </h4>
                        </div>
                        <input type="text" placeholder="Must be 4-20 characters" class="form_text">
                    </div>
                    <div class="passwd_form">
                        <div class="passwd_form-input">
                            <div class="passwd_form-head">
                                <h4 class="register-forms_input">
                                    <i style="padding-right: 2px;"
                                       class="ti-key"></i> Mật Khẩu:
                                </h4>
                            </div>
                            <input style="display: block;" type="text" class="form_text password">
                        </div>
                        <div class="passwd_form-input">
                            <div class="passwd_form-head">
                                <h4 class="register-forms_input">
                                    <i style="padding-right: 2px;"
                                       class="ti-unlock"></i> Nhập Lại Mật Khẩu:
                                </h4>
                            </div>
                            <input style="display: block;" type="text" class="form_text repassword">
                        </div>
                    </div>
                    <div class="agree_form">
                        <div class="chkbox_container">
                            Tôi đồng ý với <a href="#">Điều khoản</a>
                            <input type="password" placeholder="*************">
                            <span class="checkmark"></span>
                        </div>
                        <div class="chkbox_container">
                            Gửi tôi cập nhật về những khóa học của tôi.
                            <input type="password" placeholder="*************">
                            <span class="checkmark"></span>
                        </div>
                        <div class="btn_wrapper">
                            <input type="button" class="btn_createacc" value="Tạo tài khoản">
                            <p class="p_haveacc">Đã có tài khoản? <a class="btn_wrapper-login">Đăng nhập</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div></div>
    </div>
    <div class="register-main" id="register1">
        <div class="register-wrap">
            <div class="wrap-left">
