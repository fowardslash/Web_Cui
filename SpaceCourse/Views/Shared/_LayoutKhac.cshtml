<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="~/Content/Style/style.css" rel="stylesheet" />
    <link href="~/Content/Style/course.css" rel="stylesheet" />
</head>
<body>
    <div class="searchdialog" id="se">
        <div class="searchbar">
            <input id="s-txt-visible" class="visible"
                   placeholder="Bắt đầu gõ để tìm kiếm. VD: Lập trình python.">
        </div>
        <button class="closebtn material-symbols-outlined" onclick="makeinvis()">close</button>
        <div></div>
    </div>
    <div style="
    color: black;
    background-color: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(20px);
    box-shadow: 0 4px 14px rgb(0 0 0 / 55%);
" class="header course" id="header">
        <div class="header-logo">
            <div id="logo" class="header-item"><img width="100" src="~/Content/img/favicon.png" alt=""></div>
        </div>
        <div class="header-item" id="entry"><a href="./index.html">Trang Chủ</a></div>
        <div id="entry" class="header-item"><a href="./forum.html">Diễn Đàn</a></div>
        <div id="entry" class="header-item"><a href="#">Khóa Học</a></div>
        <div id="entry" class="header-item"><a href="#">Dịch Vụ</a></div>
        <div id="login-area" class="header-item">
            <div id="search" class="header-item" onclick="makevisible()">
                <input id="s-txt">
                <div class="search_icon">
                    <span class="material-symbols-outlined" id="icon">search</span>
                </div>
            </div>
            <div id="login" class="header-item lo" onclick="loginclick()">Đăng nhập</div>
            <div id="register" class="header-item lo" onclick="registerclick()">Đăng ký</div>
        </div>
    </div>
    @if (Session["ID"] != null)
    {
        @Html.Action("UserMenu", "User", new { id = int.Parse(Session["ID"].ToString()) })
    }
    <div>
        @RenderBody()
    </div>
    <div class="footer_wrapper">
        <div class="footer_main">
            <div class="footer_top">
                <div class="entry_footer">
                    <h3>Về chúng tôi</h3>
                    <div class="entry_links">
                        <a href="/"><p>Trang chủ</p></a>
                        <a href="/Home/About"><p>Về SpaceCourse</p></a>
                    </div>
                </div>
                <div class="entry_footer">
                    <h3>Cộng đồng</h3>
                    <div class="entry_links">
                        <p>Người học</p>
                        <p>Người dạy</p>
                        <p>DEV team</p>
                    </div>
                </div>
                <div class="entry_footer">
                    <h3>Pháp lý</h3>
                    <div class="entry_links">
                        <p>Bản quyền</p>
                        <p>Hợp pháp</p>
                        <p>Quảng cáo</p>
                        <p>Điều khoản</p>
                    </div>
                </div>
                <div class="entry_footer">
                    <h3>Hỗ trợ</h3>
                    <div class="entry_links">
                        <p>Báo cáo lỗi</p>
                        <p>Báo cáo vi phạm</p>
                        <p>Hỗ trợ kỹ thuật</p>
                        <p>Hỗ trợ tài khoản</p>
                    </div>
                </div>
                <div class="entry_footer">
                    <h3>Đóng góp</h3>
                    <div class="entry_links">
                        <p>Donate</p>
                        <p>Trở thành nhà phát triền</p>
                        <p>Góp ý</p>
                    </div>
                </div>
                <div class="entry_footer">
                    <h3>Tải app</h3>
                    <div class="entry_links">
                        <p>Google Play</p>
                        <p>AppStore</p>
                    </div>
                </div>
                <div class="entry_footer">
                    <p>© 2022 SpaceCourse & HUFLIT</p>
                    <p><b>BORN TO SHINE</b></p>
                    <div class="social_media-wrapper">
                        <i class="fab fa-facebook social_icon"></i>
                        <i class="fab fa-instagram social_icon"></i>
                        <i class="fab fa-twitter social_icon"></i>
                        <i class="fab fa-github social_icon"></i>
                    </div>
                </div>
            </div>
            <div class="footer_bottom">
                <p><b>SĐT Liên hệ:</b> 01234567890 <br><b>Email:</b> example@mail.com</p>
            </div>
        </div>
    </div>
</body>
</html>
